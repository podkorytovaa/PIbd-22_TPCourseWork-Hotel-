        mc:Ignorable="d"
        Title="Гостиница 'Принцесса на горошине'" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="MenuItemLanches" Header="Обеды" ></MenuItem>
            <MenuItem x:Name="MenuItemLunchSeminar" Header="Привязка обедов" ></MenuItem>
            <MenuItem x:Name="MenuItemRooms" Header="Номера" ></MenuItem>
            <MenuItem x:Name="MenuItemRoomers" Header="Постояльцы"></MenuItem>
            <MenuItem x:Name="MenuItemSeminarsList" Header="Список семинаров"></MenuItem>
            <MenuItem x:Name="MenuItemReport" Header="Отчёт по обедам" ></MenuItem>
        </Menu>
    </Grid>
</Window>
