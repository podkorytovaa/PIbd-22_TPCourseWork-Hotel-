@using HotelContracts.ViewModels

@model List<ParticipantViewModel>

@{
    ViewData["Title"] = "Participants";
}

<div class="text-center">
    <h2 class="display-4">Участники семинаров</h2>

    <p>
        <a asp-action="Participant"> Создать </a>
        <a asp-action="Participant"> Обновить </a>
        <a asp-action="Participant"> Удалить </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    ФИО
                </th>
                <th>
                    Статус
                </th>
                <th>
                    Название семинара
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeminarName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>