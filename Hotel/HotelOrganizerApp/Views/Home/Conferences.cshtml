@using HotelContracts.ViewModels

@model List<ConferenceViewModel>

@{
    ViewData["Title"] = "Conferences";
}

<div class="text-center">
    <h3 class="display-4">Конференции</h3>
</div>

<div class="text-center">
    @{
        if (Model == null)
        {
            <h2 class="display-4">Авторизируйтесь</h2>
            return;
        }
        <br />
        <p>
            <a class="btn btn-success" asp-action="ConferenceCreate">Создать конференцию</a>
        </p>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Название коференции
                    </th>
                    <th>
                        Дата проведения
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOf)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="ConferenceUpdate" asp-route-conferenceId="@item.Id" asp-route-conferenceName="@item.Name" 
                            asp-route-conferenceDateOf="@item.DateOf">Изменить</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="ConferenceDelete" asp-route-conferenceId="@item.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>