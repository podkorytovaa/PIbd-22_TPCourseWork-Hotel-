@{
    ViewData["Title"] = "Lunch List";
}

<div class="text-center">
    <h3 class="display-4">Список обедов по выбранным конференциям</h3>
</div>

<form method="post">
    <br />
    <div class="row">
        <div class="col-4">Выберите конференции:</div>
        <div class="col-8">
            <select id="conferencesId" name="conferencesId" multiple="multiple" class="form-control" asp-items="@(new SelectList(@ViewBag.Conferences,"Id", "Name"))"></select>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Word" class="btn btn-primary" asp-action="CreateConferencesLunchesReportToWord" />
            <input type="submit" value="Excel" class="btn btn-primary" asp-action="CreateConferencesLunchesReportToExcel" />
        </div>
    </div>
</form>